# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=false

# Frame.io Authentication
FRAME_IO_EMAIL=your_email@example.com
FRAME_IO_PASSWORD=your_password

# Google Drive API Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth2callback
# For service account authentication (preferred for server environments)
# This should be the entire service account JSON key as a string
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/busnter_service_account.json


# Google Drive Storage
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# File Management
TEMP_DOWNLOAD_DIR=/tmp/downloads
MAX_FILE_SIZE_MB=5000
DOWNLOAD_TIMEOUT_SECONDS=300

# Security
SECRET_KEY=generate_a_secure_random_key_here
